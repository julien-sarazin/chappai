{
    "name": "chappai",
    "version": "1.5.0",
    "description": "A standalone gateway for micro-service architecture",
    "main": "index.js",
    "dependencies": {
        "bluebird": "3.5.1",
        "body-parser": "1.18.2",
        "chai": "4.1.2",
        "chai-as-promised": "7.1.1",
        "express": "^4.15.4",
        "idylle": "2.4.1",
        "lodash": "4.17.4",
        "yemma-discovery": "1.9.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Digipolitan/chappai.git"
    },
    "keywords": [
        "microservices"
    ],
    "author": "Julien Sarazin <julien.sarazin@me.com>, Julien Brouzes <julien.brouzes@loginchinese.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Digipolitan/chappai/issues"
    },
    "homepage": "https://github.com/Digipolitan/chappai#readme",
    "scripts": {
        "test": "mocha $(find . -name '*.specs.js' ! -ipath '*node_modules*') --timeout 20000 --require ./test/requirements.js",
        "coverage": "istanbul cover _mocha $(find . -name '*.specs.js' ! -ipath '*node_modules*') --timeout 20000 --require ./test",
        "start": "node index.js",
        "lint": "eslint ."
    },
    "eslintConfig": {
        "extends": "airbnb",
        "rules": {
            "indent": "off",
            "arrow-parens": "off",
            "no-multi-spaces": "off",
            "jsx-a11y/href-no-hash": "off",
            "camelcase": "off",
            "no-use-before-define": "off",
            "no-underscore-dangle": "off",
            "max-len": "off",
            "no-undef": "off",
            "new-cap": "off",
            "curly": "off",
            "no-confusing-arrow": "off",
            "no-trailing-spaces": "off",
            "comma-dangle": "off",
            "no-param-reassign": "off",
            "func-names": [
                "error",
                "never"
            ],
            "no-return-assign": "off",
            "global-require": "off",
            "no-shadow": "warn",
            "no-unused-vars": "warn"
        }
    }
}
